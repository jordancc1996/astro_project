---
const pillars = [
  {
    id: 'investor',
    title: 'Inversionista Visa',
    subtitle: 'Investor Residency',
    description: 'Obtain residency through a qualifying investment in an Argentine business or venture.',
    image: 'https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=800&q=80',
    href: '/visa/investor',
  },
  {
    id: 'retiree',
    title: 'Pensionado Visa',
    subtitle: 'Retirement Visa',
    description: 'Designed for retirees with a monthly pension looking to enjoy life in Argentina.',
    image: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800&q=80',
    href: '/visa/retiree',
  },
  {
    id: 'rentista',
    title: 'Rentista Visa',
    subtitle: 'Passive Income',
    description: 'For individuals with demonstrable passive income from investments or rental properties.',
    image: 'https://images.unsplash.com/photo-1554469384-e58fac16e23a?w=800&q=80',
    href: '/visa/rentista',
  },
  {
    id: 'citizenship',
    title: 'Citizenship Path',
    subtitle: 'Naturalization',
    description: 'After just 2 years of residency, become eligible for full Argentine citizenship.',
    image: 'https://images.unsplash.com/photo-1589909202802-8f4aadce1849?w=800&q=80',
    href: '/citizenship',
  },
];
---

<section class="section-padding bg-white">
  <div class="container-luxury">
    <!-- Section Header -->
    <div class="text-center mb-20 md:mb-28 reveal">
      <p class="label-small mb-5">
        Your Path Forward
      </p>
      <h2 class="font-serif text-4xl md:text-5xl font-light text-charcoal tracking-wide mb-6">
        Four Ways to Residency
      </h2>
      <div class="divider-light"></div>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-gray-border stagger-children">
      {pillars.map((pillar, index) => (
        <a href={pillar.href} class="group block bg-white">
          <div class="pillar-card">
            <!-- Image - z-index: 0 -->
            <img
              src={pillar.image}
              alt={pillar.title}
              class="pillar-image"
            />

            <!-- Dark Gradient Overlay - z-index: 1 -->
            <div class="pillar-overlay"></div>

            <!-- Content - z-index: 2 -->
            <div class="pillar-content">
              <!-- Subtitle Label -->
              <p class="pillar-label">
                {pillar.subtitle}
              </p>

              <!-- Title -->
              <h3 class="pillar-title">
                {pillar.title}
              </h3>

              <!-- Description -->
              <p class="pillar-description">
                {pillar.description}
              </p>

              <!-- CTA Link -->
              <span class="pillar-link">
                <span>Explore</span>
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-20 md:mt-28 reveal">
      <p class="font-sans text-sm font-light text-gray-light mb-6">
        Not sure which visa is right for you?
      </p>
      <a href="/consultation" class="btn-luxury">
        Schedule a Consultation
      </a>
    </div>
  </div>
</section>

<style>
  /* Card Container */
  .pillar-card {
    position: relative;
    height: 450px;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .pillar-card {
      height: 550px;
    }
  }

  /* Background Image - z-index: 0 */
  .pillar-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    filter: saturate(0.9);
    transition: transform 0.7s ease-out;
  }

  .group:hover .pillar-image {
    transform: scale(1.03);
  }

  /* Dark Gradient Overlay - z-index: 1 */
  .pillar-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
    transition: background 0.5s ease;
  }

  .group:hover .pillar-overlay {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.25) 0%,
      rgba(0, 0, 0, 0.45) 50%,
      rgba(0, 0, 0, 0.75) 100%
    );
  }

  /* Content Container - z-index: 2 */
  .pillar-content {
    position: absolute;
    inset: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 32px;
  }

  @media (min-width: 768px) {
    .pillar-content {
      padding: 40px;
    }
  }

  /* Small Label / Subtitle */
  .pillar-label {
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 11px;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #FFFFFF;
    opacity: 0.85;
    margin-bottom: 12px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  /* Main Title */
  .pillar-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 28px;
    font-weight: 300;
    letter-spacing: 0.02em;
    line-height: 1.2;
    color: #FFFFFF;
    margin-bottom: 16px;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.6);
  }

  @media (min-width: 768px) {
    .pillar-title {
      font-size: 32px;
    }
  }

  /* Description Text */
  .pillar-description {
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 15px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 24px;
    max-width: 400px;
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.5);
  }

  @media (min-width: 768px) {
    .pillar-description {
      font-size: 16px;
    }
  }

  /* Explore Link */
  .pillar-link {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #FFFFFF;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    transition: opacity 0.3s ease;
  }

  .group:hover .pillar-link {
    opacity: 1;
  }
</style>
