---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  image?: string;
  breadcrumbs?: Array<{ label: string; href: string }>;
}

const { 
  title, 
  subtitle, 
  description,
  image = 'https://images.unsplash.com/photo-1589909202802-8f4aadce1849?w=1920&q=80',
  breadcrumbs = []
} = Astro.props;
---

<section class="relative h-[50vh] min-h-[400px] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover"
      style="filter: saturate(0.9);"
    />
  </div>

  <!-- Dark Gradient Overlay -->
  <div class="absolute inset-0 z-[1] bg-gradient-to-b from-black/40 via-black/50 to-black/60"></div>

  <!-- Content -->
  <div class="relative z-10 container-luxury text-center max-w-4xl mx-auto px-6">
    <!-- Breadcrumbs -->
    {breadcrumbs.length > 0 && (
      <nav class="mb-6 opacity-0 animate-fade-up delay-100">
        <ol class="flex items-center justify-center gap-2 text-white/70">
          <li>
            <a href="/" class="hover:text-white transition-colors text-sm">Home</a>
          </li>
          {breadcrumbs.map((crumb, index) => (
            <>
              <li class="text-white/40">/</li>
              <li>
                {index === breadcrumbs.length - 1 ? (
                  <span class="text-white text-sm">{crumb.label}</span>
                ) : (
                  <a href={crumb.href} class="hover:text-white transition-colors text-sm">{crumb.label}</a>
                )}
              </li>
            </>
          ))}
        </ol>
      </nav>
    )}

    <!-- Subtitle -->
    {subtitle && (
      <p class="font-sans text-[11px] font-normal tracking-luxury uppercase text-white/80 mb-4 opacity-0 animate-fade-up delay-150" style="text-shadow: 0 2px 8px rgba(0,0,0,0.4);">
        {subtitle}
      </p>
    )}

    <!-- Title -->
    <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-light text-white leading-tight tracking-wide mb-4 opacity-0 animate-fade-up delay-200" style="text-shadow: 0 2px 16px rgba(0,0,0,0.5);">
      {title}
    </h1>

    <!-- Description -->
    {description && (
      <p class="font-sans text-base md:text-lg font-light text-white/85 leading-relaxed max-w-2xl mx-auto opacity-0 animate-fade-up delay-300" style="text-shadow: 0 2px 8px rgba(0,0,0,0.4);">
        {description}
      </p>
    )}
  </div>
</section>
