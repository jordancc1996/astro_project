---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';

const offices = [
  {
    city: 'Buenos Aires',
    address: 'Av. Libertador 4000, Palermo',
    phone: '+54 11 4000-0000',
    email: 'buenosaires@argentinasgoldenvisa.com',
    hours: 'Mon-Fri: 9:00 AM - 6:00 PM (ART)',
  },
  {
    city: 'Miami',
    address: '200 S Biscayne Blvd, Suite 1800',
    phone: '+1 305 000-0000',
    email: 'miami@argentinasgoldenvisa.com',
    hours: 'Mon-Fri: 9:00 AM - 6:00 PM (EST)',
  },
  {
    city: 'New York',
    address: '350 Fifth Avenue, 21st Floor',
    phone: '+1 212 000-0000',
    email: 'newyork@argentinasgoldenvisa.com',
    hours: 'Mon-Fri: 9:00 AM - 6:00 PM (EST)',
  },
];
---

<BaseLayout title="Contact Us | Argentina's Golden Visa">
  <Header />
  <main>
    <PageHero 
      title="Contact Us"
      subtitle="Get in Touch"
      description="We're here to answer your questions and help you begin your journey to Argentina."
      image="https://images.unsplash.com/photo-1423666639041-f56000c27a9a?w=1920&q=80"
      breadcrumbs={[{ label: 'Contact', href: '/contact' }]}
    />

    <!-- Contact Form & Info -->
    <section class="section-padding bg-white">
      <div class="container-luxury">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
          <!-- Contact Form -->
          <div>
            <h2 class="font-serif text-3xl font-light text-charcoal mb-8">
              Send Us a Message
            </h2>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block font-sans text-sm font-light text-charcoal mb-2">First Name</label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName"
                    class="w-full px-4 py-3 border border-gray-border font-sans text-sm font-light focus:outline-none focus:border-charcoal transition-colors"
                    required
                  />
                </div>
                <div>
                  <label for="lastName" class="block font-sans text-sm font-light text-charcoal mb-2">Last Name</label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName"
                    class="w-full px-4 py-3 border border-gray-border font-sans text-sm font-light focus:outline-none focus:border-charcoal transition-colors"
                    required
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block font-sans text-sm font-light text-charcoal mb-2">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  class="w-full px-4 py-3 border border-gray-border font-sans text-sm font-light focus:outline-none focus:border-charcoal transition-colors"
                  required
                />
              </div>

              <div>
                <label for="phone" class="block font-sans text-sm font-light text-charcoal mb-2">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-border font-sans text-sm font-light focus:outline-none focus:border-charcoal transition-colors"
                />
              </div>

              <div>
                <label for="visaType" class="block font-sans text-sm font-light text-charcoal mb-2">Visa Interest</label>
                <select 
                  id="visaType" 
                  name="visaType"
                  class="w-full px-4 py-3 border border-gray-border font-sans text-sm font-light focus:outline-none focus:border-charcoal transition-colors bg-white"
                >
                  <option value="">Select a visa type</option>
                  <option value="investor">Inversionista Visa</option>
                  <option value="retiree">Pensionado Visa</option>
                  <option value="rentista">Rentista Visa</option>
                  <option value="digital-nomad">Digital Nomad Visa</option>
                  <option value="citizenship">Citizenship</option>
                  <option value="other">Other / Not Sure</option>
                </select>
              </div>

              <div>
                <label for="message" class="block font-sans text-sm font-light text-charcoal mb-2">Message</label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="5"
                  class="w-full px-4 py-3 border border-gray-border font-sans text-sm font-light focus:outline-none focus:border-charcoal transition-colors resize-none"
                  required
                ></textarea>
              </div>

              <button type="submit" class="btn-luxury w-full md:w-auto">
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div>
            <h2 class="font-serif text-3xl font-light text-charcoal mb-8">
              Our Offices
            </h2>
            <div class="space-y-10">
              {offices.map((office) => (
                <div class="pb-10 border-b border-gray-border last:border-b-0 last:pb-0">
                  <h3 class="font-serif text-xl text-charcoal mb-4">{office.city}</h3>
                  <div class="space-y-2">
                    <p class="font-sans text-sm font-light text-gray-warm flex items-start gap-3">
                      <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                      </svg>
                      {office.address}
                    </p>
                    <p class="font-sans text-sm font-light text-gray-warm flex items-start gap-3">
                      <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                      </svg>
                      {office.phone}
                    </p>
                    <p class="font-sans text-sm font-light text-gray-warm flex items-start gap-3">
                      <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                      </svg>
                      {office.email}
                    </p>
                    <p class="font-sans text-sm font-light text-gray-warm flex items-start gap-3">
                      <svg class="w-5 h-5 text-bronze flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {office.hours}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
