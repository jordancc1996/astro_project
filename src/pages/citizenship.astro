import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';

const steps = [
  {
    number: '01',
    title: 'Obtain Residency',
    description: 'First, secure your temporary or permanent residency through one of our visa programs.',
  },
  {
    number: '02',
    title: 'Maintain Residence',
    description: 'Live in Argentina for a minimum of 2 years, maintaining your legal residency status.',
  },
  {
    number: '03',
    title: 'Prepare Documentation',
    description: 'Gather required documents including proof of residence, income, and clean criminal record.',
  },
  {
    number: '04',
    title: 'Submit Application',
    description: 'File your citizenship application with the federal court in your jurisdiction.',
  },
  {
    number: '05',
    title: 'Attend Interview',
    description: 'Complete an interview demonstrating basic Spanish proficiency and knowledge of Argentina.',
